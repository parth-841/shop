<%- include("../includes/html-head.ejs"); %>
</head>
<body>
    <%- include("../includes/navbar") %>
    <h1 class="text-center my-3">Products</h1>
    <div>
        <% if(products.length === 0 || !products) {%>
            <p class="text-center">Products not found !!!</p>
        <% } else { %>
        <div class="row">

            <% for(let product of products) { %>
                <div class="col-md-4 d-flex justify-content-center" style="height: 550px;">
                    <div class="card text-dark bg-light mb-3 w-75">
                        <div class="card-header text-center font-weight-bold"><%= product.title %></div>
                        <div class="card-body">
                            <img class="w-100 h-75" src="<%= product.imageUrl %>" alt="<%= product.imgUrl %> not found">
                            <p class="card-text">price: <%= product.price %></p>
                            <p class="card-text">Description: <%= product.description %></p>
                            <div class="d-flex justify-content-between">
                                <form action="/product/<%= product.id %>" method="post">
                                    <button class="btn btn-secondary" type="submit">Show Product</button>
                                </form>
                                <button class="btn btn-secondary">Add To Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

        </div>
        <% } %>
    </div>
</body>
</html>